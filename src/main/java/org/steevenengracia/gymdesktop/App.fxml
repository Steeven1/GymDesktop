<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="550.0"
            prefWidth="750.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.steevenengracia.gymdesktop.App"
            fx:id="app"
>
   <top>
      <Pane prefHeight="78.0"
            prefWidth="750.0"
            style="-fx-background-color: #b4b4b4;"
            BorderPane.alignment="CENTER">
         <rotationAxis>
            <Point3D />
         </rotationAxis>
      </Pane>
   </top>
   <left>
      <Pane prefHeight="472.0"
            prefWidth="171.0"
            style="-fx-background-color: #939190;"
            BorderPane.alignment="CENTER">
         <VBox fx:id="vMenu"
               layoutX="8.0"
               layoutY="7.0"
               prefHeight="236.0"
               prefWidth="152.0"
               spacing="10.0"
               stylesheets="components/toggleButton/toggleButton.css">
            <ImageView fitHeight="120.0"
                       fitWidth="155.0"
                       pickOnBounds="true"
                       preserveRatio="true"/>
            <Label alignment="CENTER"
                   contentDisplay="TOP"
                   prefHeight="22.0"
                   prefWidth="163.0"
                   text="Hola Unknow"/>

            <ToggleButton id="home"
                          fx:id="home"
                          onAction="#route"
                          prefHeight="26.0"
                          prefWidth="158.0"
                          text="home"/>
            <ToggleButton id="membership"
                          fx:id="membership"
                          onAction="#route"
                          prefHeight="26.0"
                          prefWidth="158.0"
                          text="membership"/>
         </VBox>
      </Pane>
   </left>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <StackPane fx:id="main"
                    layoutX="8.0"
                    layoutY="8.0"
                    minHeight="-Infinity"
                    minWidth="-Infinity"
                    prefHeight="449.0"
                    prefWidth="538.0"/>
      </AnchorPane>
   </center>
</BorderPane>
